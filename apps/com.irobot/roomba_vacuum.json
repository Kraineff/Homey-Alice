[
    {
        "type": "devices.capabilities.on_off",
        "instance": "on",
        "read": {
            "vacuum_state": {
                "values": {
                    "true": ["clean", "quick", "spot", "train", "manual", "paused", "stopped"],
                    "false": "*"
                }
            }
        },
        "write": {
            "command_start_clean": {
                "values": {
                    "true": true
                }
            },
            "command_dock": {
                "values": {
                    "false": true
                }
            }
        }
    },
    {
        "type": "devices.capabilities.toggle",
        "instance": "pause",
        "read": {
            "vacuum_state": {
                "values": {
                    "true": ["paused", "stopped"],
                    "false": "*"
                }
            }
        },
        "write": {
            "command_pause": {
                "values": {
                    "true": true
                }
            },
            "command_resume": {
                "values": {
                    "false": true
                }
            }
        }
    }
]